                        <TableColumn  prefWidth="116.0" text="Grooming Date">
                          <cellValueFactory><PropertyValueFactory property="lastGroomed" /></cellValueFactory></TableColumn>
                        <TableColumn  prefWidth="116.0" text="Vet Date">
                          <cellValueFactory><PropertyValueFactory property="lastCheckUp" /></cellValueFactory></TableColumn>
                  </columns>
                </TableView>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
    <Button fx:id="btn_adopt" layoutX="493.0" layoutY="444.0" mnemonicParsing="false" text="Adopt" />
  </children>

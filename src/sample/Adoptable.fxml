<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0"
  xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="sample.AdoptableController">
  <children>
    <MenuButton fx:id="btn_adoptableDogs" alignment="CENTER" contentDisplay="RIGHT"
      mnemonicParsing="false" text="Adoptable Dogs" AnchorPane.bottomAnchor="450.0"
      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <font>
        <Font size="18.0"/>
      </font>
      <items>
        <MenuItem fx:id="menuItem_HomePage" mnemonicParsing="false" onAction="#handleHomeMenuItem"
          text="Home"/>
        <Menu mnemonicParsing="false" text="Adoptable">
          <items>
            <MenuItem fx:id="menuItem_AdoptableCats" mnemonicParsing="false"
              onAction="#handleAdoptableCatsMenuItem" text="Adoptable Cats"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Animal Info">
          <items>
            <MenuItem fx:id="menuItem_EditAnimal" mnemonicParsing="false"
              onAction="#handleAnimalInfoMenuItem" text="Edit Animal Info"/>
            <MenuItem fx:id="menuItem_SearchAnimal" mnemonicParsing="false"
              onAction="#handleAnimalSearchMenuItem" text="Search Animal "/>
            <MenuItem fx:id="menuItem_AnimalStatus" mnemonicParsing="false"
              onAction="#handleAnimalStatusMenuItem" text="Animal Status"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" onAction="#handleAnimalCareMenuItem" text="Animal Care">
        </Menu>
      </items>
    </MenuButton>
    <ScrollPane layoutX="34.0" layoutY="39.0" prefHeight="362.0" prefWidth="508.0">
      <content>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="367.0" prefWidth="816.0">
          <children>
            <TableView fx:id="tbv_adoptableDogs" prefHeight="343.0" prefWidth="1094.0">
              <columns>
                <TableColumn prefWidth="98.99996948242188" text="Name">
                  <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                  </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="126.0" text="Subspecies">
                  <cellValueFactory>
                    <PropertyValueFactory property="species"/>
                  </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="128.0" text="Breed">
                  <cellValueFactory>
                    <PropertyValueFactory property="breed"/>
                  </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="128.0" text="Collar ID">
                  <cellValueFactory>
                    <PropertyValueFactory property="collarID"/>
                  </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="128.0" text="Check In Date">
                  <cellValueFactory>
                    <PropertyValueFactory property="checkedIn"/>
                  </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="128.0" text="Last Checkup">
                  <cellValueFactory>
                    <PropertyValueFactory property="lastCheckUp"/>
                  </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="128.0" text="Last Groom">
                  <cellValueFactory>
                    <PropertyValueFactory property="lastGroomed"/>
                  </cellValueFactory>
                </TableColumn>
              </columns>
            </TableView>
          </children>
        </AnchorPane>
      </content>
    </ScrollPane>
    <Button fx:id="btn_adopt" layoutX="493.0" layoutY="444.0" mnemonicParsing="false" text="Adopt"/>
  </children>
</AnchorPane>
